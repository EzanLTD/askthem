<section class="profile">
  <header>
    <div class="avatar">
      <img src="http://lorempixel.com/130/130/" alt="" />
    </div>
    <div class="person-info">
      <h1><%= @user.given_name -%> <%= @user.family_name -%>&nbsp;&nbsp;<% if @user.verified? -%><i class='icon-ok-sign is-verified'><span class='verified-tooltip'>AskThem Verified</span></i><% end -%></h1>
      <span class="loc"><%= @user.locality -%>, <%= @user.region.upcase -%></span>
      <ul class="links">
        <li><a href="#">@strevat</a></li>
        <li><a href="#">steventrevathan.com</a></li>
      </ul>
    </div>
    <% if user_signed_in? && current_user.has_role?(:staff_member) -%>
      <div class="identity-controls">
        <% if @user.identities.where(status: "being_inspected").count > 0 -%>
          <h3>Inspect</h3>
          <% @user.identities.where(status: "being_inspected").each do |identity| -%>
            <div class="identity-inspection-outcome">
              <%= link_to("Person Details", person_path(identity.person.metadatum, identity.person)) -%>:
              <%= button_to("Verify", identity_path(identity, event: "verify!"), method: 'put', class: "inspect-button") %>
              <%= button_to("Reject", identity_path(identity, event: "reject!"), method: 'put', class: "inspect-button") %>
            </div>
          <% end -%>
        <% end -%>
        <% if @user.identities.where(status: "rejected").count > 0 -%>
          <h3>Rejected:</h3>
          <% @user.identities.where(status: "rejected").each do |identity| -%>
            <div class="identity-inspection-outcome">
              <%= link_to("Person Details", person_path(identity.person.metadatum, identity.person)) -%>
            </div>
          <% end -%>
        <% end -%>
      </div>
    <% end -%>
  </header>
  <div class="related_data">
    <nav>
      <ul class="related_nav">
        <li><a href="#" class="active">12 Questions</a></li>
        <li><a href="#">300 Signatures</a></li>
      </ul>
    </nav>
    <div class="related_content">
      <section class="questions related_focus">
        <ol>
          <% 5.times do %>
          <li>
            <div class="question_content">
              <%= link_to 'Why have this thing for act for what? <span class="icon-angle-right view"></span>'.html_safe, '#', class: 'title' %>
              <p>Lorem ipsum dolor sit amet, adipisicing elit, sed do  tempor incididunt ut labore et dolore magna aliqua sed do eiusmod tempor  ut&hellip; <span class="context">&rarr; in Pennsylvania Bills</span></p>
              <span class="target">
                <%= link_to image_tag('http://lorempixel.com/40/40/people/', size: '20x20', alt: '') + 'Steve T', '#' %>
                <span class="to">&rarr;</span>
                <%= link_to image_tag('http://lorempixel.com/40/40/people/', size: '20x20', alt: '') + 'Phil Mendelson, Councilmember, Ward 7', '#', class: 'recipient' %>
              </span>
            </div>
            <ul class="activity">
              <li><%= link_to '25 Signatures', '#', class: 'support'%></li>
            </ul>
            <a href="#" class="sign_on">Sign On</a>
            <div class="clear"></div>
          </li>
          <% end %>

        </ol>
      </section>
      <aside>
        <section>
          <h4>Top Issues</h4>
          <ul>
            <li><a href="#">Education</a></li>
            <li><a href="#">Human Rights</a></li>
            <li><a href="#">Natural Resources</a></li>
          </ul>
        </section>
      </aside>
    </div>
  </div>
</section>
