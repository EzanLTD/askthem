<%= render 'shared/navigation' %>

<section class="question">
  <article>
    <header>
      <h1 class="action">Ask a question</h1>
    </header>
    <form class="action" action="<%= preview_questions_path(@jurisdiction.abbreviation) %>" method="get" accept-charset="utf-8"><%# @todo make into a proper form %>
      <div class="count">
        <span class="summary_count">60</span>
        <input type="text" name="summary" id="summary" placeholder="Summary&hellip;" maxlength="60">
      </div>

      <label for="question">Full Question
        <span class="details">Why is this important? Give it your all!</span>
      </label>
      <textarea name="question" id="question" cols="30" rows="10" placeholder="Go on&hellip;"></textarea>

      <label for="issue_area">Select an issue area
        <span class="opt">(optional)</span>
      </label>

      <select name="issue_area" id="issue_area">
        <option value="0">Select an Issue</option>
        <option value="1">Issue #1!</option>
      </select>
    </form>
  </article>
  
  <%= render partial: 'progress' %>
</section>
