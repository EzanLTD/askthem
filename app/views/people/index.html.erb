<%= render 'shared/navigation' %>

<section class="people listings">
  <header>
    <h1>People</h1>
    <%= link_to 'Post a Question', new_question_path, class: 'cta_pill' %>
  </header>
  <div class="filters">
    <span class="info">Filter by:</span>
    <ul class="menu">
      <li class="selected">District <span class="icon-angle-down"></span></li>
      <li class="menu">
        <ul>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
        </ul>
      </li>
    </ul>
    <ul class="menu">
      <li class="selected">Official <span class="icon-angle-down"></span></li>
      <li class="menu">
        <ul>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
          <li><%= link_to 'Option', '#' %> <span class="icon-angle-down"></span></li>
        </ul>
      </li>
    </ul>
    <div class="search">
      <input type="text" name="" id="" placeholder="Search state" />
      <input type="submit" value="" />
    </div>
  </div>
  <ol class="media-list">
    <% @people.each do |person| %>
      <li class="media">
        <span class="pull-left">
          <% if person.image? %>
            <%= cdn_image_tag(person.image, size: '50x50', alt: '', class: 'media-object') %>
          <% else %>
            <%# @todo add placeholder image %>
          <% end %>
        </span>
        <div class="media-body">
          <p>
            <%= person_attributes(person) %>
            – <%= pluralize person.questions.count, 'question' %>
            – <%= pluralize person.answers.count, 'answer' %>
          </p>
          <h2 class="media-heading">
            <%= link_to person.name, person_path(@jurisdiction.id, person) %>
          </h2>
        </div>
      </li>
    <% end %>
  </ol>
</section>
