<section>
  <div class="blurb-featureds-and-form">
    <%- if @blurb %>
      <%= render @blurb %>
    <%- end %>

    <%- if @featured_answer %>
      <%= render partial: "answers/featured", object: @featured_answer %>
    <%- end %>

    <%- if @national_person %>
        <%= render partial: "people/featured", object: @national_person %>
    <%- end %>

    <form action="/locator" class="locator-form">
      <input type="text" name="q" id="q" placeholder="Enter City and State, or ZIP code" />
      <input type="submit" value="Search" class="cta-pill" />
    </form>
  </div>
  <!-- hide left column for now, keep for reference -->
  <div class="leftCol" style="display: none;">
    <%- if @national_person %>
      <header>
        <h2>Featured</h2>
      </header>
      <ul class="people-list single-featured">
        <%= render @national_person %>
      </ul>
    <%- end %>

    <header>
      <h2>Top National Questions</h2>
      <ul>
        <li><%= number_with_delimiter @national_answers_count -%> Answers</li>
        <li><%= number_with_delimiter @national_signatures_count -%> Supporters</li>
      </ul>
    </header>
    <ul class="popular_questions">
      <%= render partial: 'question', collection: @national_questions %>
    </ul>
  </div>
  <!-- hide right column for now, keep for reference -->
  <div class="rightCol" style="display: none;">
    <%- if @near_government && @near_government.has_people? %>
      <header>
        <h2><%= @near_government.legislature_name -%></h2>
      </header>
      <% @local_person = Mayor.where(state: @near_government).first || Councilmember.where(state: @near_government).first %>

      <ul class="people-list single-featured">
        <li>
          <div class="avatar">
            <% if @local_person.image? %>
              <%= cdn_image_tag(@local_person.image, state: @local_person.state, size: "60x60", alt: "") %>
            <% else %>
              <%= image_tag("placeholder.png", size: "60x60", alt: "") %>
            <% end %>
          </div>
          <div class="person-info">
            <h2><%= link_to "#{@near_government.name} info", jurisdiction_path(@near_government) %></h2>
              <span class="stats">
                <%- if @near_government.questions.count > 0 %>
                  <span><%= pluralize @near_government.questions.count, "Question" %></span>
                <%- else %>
                  <%= link_to "Ask the first question >>", new_question_path(@near_government) -%>
                <%- end %>
              </span>
          </div>
        </li>

      </ul>
    <%- elsif @near_person %>
      <header>
        <h2>Here's an Official Near You</h2>
      </header>
      <ul class="people-list single-featured">
        <%= render @near_person %>
      </ul>
    <%- end %>

    <header>
      <h2>Questions from People Near You</h2>
      <ul class="no-extra-top-margin">
        <li><%= number_with_delimiter @near_answers.count -%> Answers</li>
        <li><%= number_with_delimiter @near_signatures.count -%> Supporters</li>
      </ul>
    </header>
    <ul class="popular_questions match-left-top-margin">
      <%= render partial: "question", collection: @near_questions %>

      <% unless @near_questions.any? %>
        <li>
          <%= render partial: "shared/no_questions" %>
        </li>
      <%- end %>
    </ul>
  </div>
  <header>
    <h2>How It Works</h2>
  </header>
  <ol class="how_it_works">
    <li>
      <img src="/assets/how_1@2x.png" alt="" />
      <p><span class="num">1</span>Find your elected officials and ask them a question.</p>
    </li>
    <li>
      <img src="/assets/how_2@2x.png" alt="" />
      <p><span class="num">2</span>Get your family, friends, and neighbors to support it.</p>
    </li>
    <li>
      <img src="/assets/how_3@2x.png" alt="" />
      <p><span class="num">3</span>The elected official's answer will be publicly displayed.</p>
    </li>
  </ol>

  <ul style="display:none;">
    <% @jurisdictions.each do |jurisdiction| %>
      <li>
        <%= link_to jurisdiction['name'], questions_path(jurisdiction.abbreviation) %>
      </li>
    <% end %>
  </ul>
</section>
